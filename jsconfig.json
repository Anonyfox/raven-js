{
  // nest-ignore: jsconfig-custom - workspace root needs additional exclude patterns
  "compilerOptions": {
    "checkJs": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.js", "**/*.mjs"],
  "exclude": [
    "docs/**",
    "examples/**",
    "node_modules/**",
    "**/dist/**",
    "**/_dist/**",
    "plugins/vscode/**",
    "**/*.test.js",
    "**/static/**",
    "temp/**",
    "dist/**"
  ]
}
