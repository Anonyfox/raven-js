{
  "name": "@raven-js/nest",
  "version": "0.1.0",
  "description": "Raven's development nest - CLI tools and build automation for the RavenJS ecosystem",
  "private": true,
  "type": "module",
  "main": "lib/index.js",
  "bin": {
    "nest": "bin/nest.js"
  },
  "scripts": {
    "test": "npm run test:types && npm run test:style && npm run test:code",
    "test:code": "node --no-warnings --test --experimental-test-coverage --test-coverage-exclude='**/*.test.js' --test-coverage-include='lib/**/*.js'",
    "test:style": "npx biome lint --error-on-warnings .",
    "test:types": "tsc --noEmit --project jsconfig.json",
    "nest:validate": "node bin/nest.js validate",
    "nest:docs": "node bin/nest.js build-docs",
    "lint": "npx biome check .",
    "format": "npx biome format --write ."
  },
  "keywords": [
    "raven",
    "cli",
    "build",
    "automation",
    "development",
    "tooling"
  ],
  "author": {
    "name": "Anonyfox",
    "email": "max@anonyfox.com",
    "url": "https://anonyfox.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Anonyfox/raven-js.git",
    "directory": "packages/nest"
  },
  "bugs": {
    "url": "https://github.com/Anonyfox/raven-js/issues"
  },
  "homepage": "https://ravenjs.dev",
  "engines": {
    "node": ">=22.5.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "esbuild": "^0.25.9"
  }
}
