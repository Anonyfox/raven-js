{
  "name": "@raven-js/talons",
  "description": "Zero-dependency data interaction library for modern JavaScript - databases, APIs, and data sources",
  "version": "0.4.23",
  "type": "module",
  "main": "index.js",
  "files": [
    "**/*.js",
    "*.d.ts",
    "types.*.d.ts",
    "**/README.md",
    "LICENSE",
    "media/**/*",
    "static/**/*",
    "!**/*.test.js"
  ],
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./types.d.ts"
    },
    "./relational": {
      "import": "./relational/index.js",
      "types": "./relational/types.d.ts"
    },
    "./relational/cluster": {
      "import": "./relational/extras/cluster.js",
      "types": "./types.relational.cluster.d.ts"
    },
    "./relational/diagnostics": {
      "import": "./relational/extras/diagnostics.js",
      "types": "./types.relational.diagnostics.d.ts"
    },
    "./relational/introspection": {
      "import": "./relational/extras/introspection.js",
      "types": "./types.relational.introspection.d.ts"
    },
    "./relational/pg": {
      "import": "./relational/drivers/pg.js",
      "types": "./types.relational.pg.d.ts"
    },
    "./relational/mysql": {
      "import": "./relational/drivers/mysql.js",
      "types": "./types.relational.mysql.d.ts"
    },
    "./relational/sqlite-node": {
      "import": "./relational/drivers/sqlite-node.js",
      "types": "./types.relational.sqlite-node.d.ts"
    },
    "./relational/sqlite-wasm": {
      "import": "./relational/drivers/sqlite-wasm.js",
      "types": "./types.relational.sqlite-wasm.d.ts"
    }
  },
  "scripts": {
    "nest:validate": "node ../nest/bin/nest.js validate",
    "nest:docs": "node ../nest/bin/nest.js build-docs",
    "prepublishOnly": "npm run test && npm run test:style",
    "test": "npm run nest:validate && npm run test:types && npm run test:style && npm run test:code",
    "test:code": "node --no-warnings --test --test-reporter=dot",
    "test:coverage": "node --no-warnings --test --experimental-test-coverage --test-coverage-exclude='**/*.test.js'",
    "test:style": "npx biome lint --error-on-warnings index.js",
    "test:types": "tsc --noEmit --project jsconfig.json"
  },
  "keywords": [
    "data-interaction",
    "database",
    "api",
    "http-client",
    "data-sources",
    "zero-dependency",
    "modern-javascript",
    "esm",
    "web-development",
    "library",
    "toolkit",
    "raven"
  ],
  "author": {
    "name": "Anonyfox",
    "email": "max@anonyfox.com",
    "url": "https://anonyfox.com"
  },
  "license": "MIT",
  "homepage": "https://ravenjs.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/Anonyfox/raven-js.git"
  },
  "bugs": {
    "url": "https://github.com/Anonyfox/raven-js/issues"
  },
  "engines": {
    "node": ">=22.5.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/Anonyfox"
  }
}
