{
  "compilerOptions": {
    "checkJs": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "maxNodeModuleJsDepth": 0
  },
  "include": ["*.js", "bin/**/*.js", "lib/**/*.js"],
  "exclude": ["**/*.test.js", "static/**/*"]
}
