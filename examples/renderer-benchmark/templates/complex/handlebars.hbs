<!DOCTYPE html>
<html lang="en" data-theme="{{userPreferences.theme}}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{site.name}} - Modern Web Development Blog</title>
  <meta name="description" content="{{site.description}}">
  <meta name="author" content="{{site.author}}">
  <meta property="og:title" content="{{site.name}}">
  <meta property="og:description" content="{{site.description}}">
  <meta property="og:type" content="website">
  <link rel="canonical" href="{{site.url}}">
  <link rel="stylesheet" href="/css/blog.css">
  <script defer src="/js/blog-interactions.js"></script>
</head>
<body>
  <header class="site-header">
    <div class="header-content">
      <div class="site-branding">
        <h1 class="site-title">
          <a href="/">{{site.name}}</a>
        </h1>
        <p class="site-tagline">{{site.description}}</p>
      </div>
      <nav class="main-nav" role="navigation" aria-label="Main navigation">
        <ul class="nav-list">
          {{#each site.navigation}}
          <li class="nav-item">
            <a href="{{url}}" class="nav-link {{#ifEquals url '/'}}active{{/ifEquals}}">
              {{name}}
            </a>
          </li>
          {{/each}}
        </ul>
      </nav>
      <div class="header-actions">
        <button class="theme-toggle" title="Toggle dark/light theme">üåì</button>
        <button class="view-toggle" title="Toggle compact view">üìã</button>
      </div>
    </div>
  </header>

  <main class="main-content">
    <div class="content-wrapper">
      <div class="main-column">
        <!-- Search and Filters -->
        <div class="search-filters">
          <form class="search-form" role="search">
            <div class="search-input-group">
              <label for="search" class="sr-only">Search posts</label>
              <input type="search" id="search" name="q" placeholder="Search posts..."
                     value="{{searchQuery}}" class="search-input">
              <button type="submit" class="search-btn">üîç Search</button>
            </div>
          </form>
          <div class="filter-controls">
            <select name="category" class="filter-select" title="Filter by category">
              <option value="">All Categories</option>
              {{#each categories}}
              <option value="{{this}}" {{#ifEquals ../selectedCategory this}}selected{{/ifEquals}}>
                {{this}}
              </option>
              {{/each}}
            </select>
            <select name="sort" class="filter-select" title="Sort posts">
              <option value="publishedAt" {{#ifEquals sortBy 'publishedAt'}}selected{{/ifEquals}}>Latest First</option>
              <option value="views" {{#ifEquals sortBy 'views'}}selected{{/ifEquals}}>Most Popular</option>
              <option value="likes" {{#ifEquals sortBy 'likes'}}selected{{/ifEquals}}>Most Liked</option>
            </select>
          </div>
        </div>

        <!-- Featured Posts Section -->
        {{#if featuredPosts.length}}
        <section class="featured-posts" aria-labelledby="featured-heading">
          <h2 id="featured-heading">Featured Posts</h2>
          <div class="featured-grid">
            {{#each featuredPosts}}
            <article class="featured-post">
              <div class="featured-content">
                <div class="post-badge">Featured</div>
                <h3>
                  <a href="/blog/{{slug}}" class="featured-title">
                    {{title}}
                  </a>
                </h3>
                <p class="featured-excerpt">{{excerpt}}</p>
                <div class="featured-meta">
                  <span class="author">by {{author.name}}</span>
                  <span class="read-time">{{readTime}} min read</span>
                  <span class="views">{{formatNumber views}} views</span>
                </div>
              </div>
            </article>
            {{/each}}
          </div>
        </section>
        {{/if}}

        <!-- Posts Section -->
        <section class="posts-section" aria-labelledby="posts-heading">
          <div class="section-header">
            <h2 id="posts-heading">
              {{#if selectedCategory}}Posts in {{selectedCategory}}{{else}}All Posts{{/if}}
            </h2>
            <div class="posts-count">{{posts.length}} posts found</div>
          </div>

          {{#if posts.length}}
          <div class="posts-grid {{#if userPreferences.compactView}}compact{{/if}}">
            {{#each posts}}
            {{#with this}}
            <article class="post-card {{#if featured}}featured{{/if}} {{#if ../userPreferences.compactView}}compact{{/if}}"
                     data-category="{{category}}"
                     data-read-time="{{#if (lte readTime 3)}}quick{{else}}{{#if (lte readTime 7)}}medium{{else}}long{{/if}}{{/if}}">
              <header class="post-header">
                <div class="post-badges">
                  {{#if featured}}
                  <span class="badge featured">Featured</span>
                  {{/if}}
                  {{#if (isRecent publishedAt)}}
                  <span class="badge new">New</span>
                  {{/if}}
                  <span class="badge category">{{category}}</span>
                </div>
                <h3 class="post-title">
                  <a href="/blog/{{slug}}" class="post-link">
                    {{title}}
                  </a>
                </h3>
                <div class="post-meta">
                  <div class="author-info">
                    <img src="https://via.placeholder.com/32x32?text={{initials author.name}}"
                         alt="{{author.name}}" class="author-avatar" width="32" height="32">
                    <div class="author-details">
                      <span class="author-name">{{author.name}}</span>
                      <span class="author-bio">{{author.bio}}</span>
                    </div>
                  </div>
                  <div class="post-timing">
                    <time datetime="{{isoDate publishedAt}}" class="publish-date"
                          title="Published on {{formatDate publishedAt}}">
                      {{formatDate publishedAt}}
                    </time>
                    <span class="read-time" title="Estimated reading time">
                      üìñ {{readTime}} min read
                    </span>
                  </div>
                </div>
              </header>

              {{#unless ../userPreferences.compactView}}
              <div class="post-content">
                <p class="post-excerpt">{{excerpt}}</p>
                {{#if (gt content.length 500)}}
                <details class="content-preview">
                  <summary>Read more...</summary>
                  <div class="full-content">
                    {{#each (split content '\\n\\n')}}
                    <p>{{this}}</p>
                    {{/each}}
                  </div>
                </details>
                {{/if}}
              </div>
              {{/unless}}

              <div class="post-tags">
                {{#each tags}}
                <a href="/blog/tag/{{urlEncode this}}" class="tag">
                  #{{this}}
                </a>
                {{/each}}
              </div>

              <footer class="post-stats">
                <div class="engagement-stats">
                  <span class="stat views" title="{{formatNumber views}} views">
                    üëÅÔ∏è {{#if (gt views 1000)}}{{formatShort views}}k{{else}}{{views}}{{/if}}
                  </span>
                  <span class="stat likes" title="{{formatNumber likes}} likes">
                    ‚ù§Ô∏è {{#if (gt likes 1000)}}{{formatShort likes}}k{{else}}{{likes}}{{/if}}
                  </span>
                  <span class="stat comments" title="{{formatNumber comments}} comments">
                    üí¨ {{comments}}
                  </span>
                </div>
                <div class="post-actions">
                  <button class="action-btn bookmark" title="Bookmark this post">
                    üîñ Save
                  </button>
                  <button class="action-btn share" title="Share this post">
                    üîó Share
                  </button>
                </div>
              </footer>
            </article>
            {{/with}}
            {{/each}}
          </div>
          {{else}}
          <div class="no-posts">
            <h3>No posts found</h3>
            <p>Try adjusting your search or filter criteria to find more posts.</p>
            <a href="/blog" class="reset-filters">Reset filters</a>
          </div>
          {{/if}}
        </section>

        <!-- Pagination -->
        {{#if posts.length}}
        <nav class="pagination" role="navigation" aria-label="Pagination">
          <div class="pagination-info">
            <span>Page {{currentPage}} of {{totalPages}} ({{multiply totalPages 10}} total posts)</span>
          </div>
          <div class="pagination-controls">
            {{#if hasPrevPage}}
            <a href="/blog?page=1" class="page-link first" aria-label="Go to first page">¬´ First</a>
            <a href="/blog?page={{subtract currentPage 1}}" class="page-link prev" aria-label="Go to previous page">‚Äπ Previous</a>
            {{else}}
            <span class="page-link disabled">¬´ First</span>
            <span class="page-link disabled">‚Äπ Previous</span>
            {{/if}}

            {{#paginationPages currentPage totalPages}}
            <a href="/blog?page={{this}}"
               class="page-link {{#ifEquals this ../currentPage}}current{{/ifEquals}}"
               {{#ifEquals this ../currentPage}}aria-current="page"{{/ifEquals}}>
              {{this}}
            </a>
            {{/paginationPages}}

            {{#if hasNextPage}}
            <a href="/blog?page={{add currentPage 1}}" class="page-link next" aria-label="Go to next page">Next ‚Ä∫</a>
            <a href="/blog?page={{totalPages}}" class="page-link last" aria-label="Go to last page">Last ¬ª</a>
            {{else}}
            <span class="page-link disabled">Next ‚Ä∫</span>
            <span class="page-link disabled">Last ¬ª</span>
            {{/if}}
          </div>
        </nav>
        {{/if}}
      </div>

      <!-- Sidebar -->
      <aside class="sidebar">
        <!-- Analytics Dashboard -->
        <div class="analytics-dashboard">
          <h3>Blog Statistics</h3>
          <div class="stats-grid">
            <div class="stat-item">
              <span class="stat-number">{{formatNumber totalPosts}}</span>
              <span class="stat-label">Total Posts</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">{{formatNumber analytics.totalViews}}</span>
              <span class="stat-label">Total Views</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">{{formatNumber analytics.totalLikes}}</span>
              <span class="stat-label">Total Likes</span>
            </div>
            <div class="stat-item">
              <span class="stat-number">{{analytics.avgReadTime}} min</span>
              <span class="stat-label">Avg Read Time</span>
            </div>
          </div>
        </div>

        <!-- Category Filter -->
        <div class="category-filter">
          <h3>Filter by Category</h3>
          <ul class="category-list">
            <li>
              <a href="/blog" class="category-link {{#unless selectedCategory}}active{{/unless}}">
                All Posts
              </a>
            </li>
            {{#each categories}}
            <li>
              <a href="/blog?category={{urlEncode this}}"
                 class="category-link {{#ifEquals ../selectedCategory this}}active{{/ifEquals}}">
                {{this}}
              </a>
            </li>
            {{/each}}
          </ul>
        </div>

        <!-- Popular Tags -->
        <div class="popular-tags">
          <h3>Popular Tags</h3>
          <div class="tag-cloud">
            {{#each popularTags}}
            <a href="/blog/tag/{{urlEncode name}}"
               class="tag-link"
               style="font-size: {{tagSize count}}rem"
               title="{{count}} posts">
              #{{name}}
              <span class="tag-count">({{count}})</span>
            </a>
            {{/each}}
          </div>
        </div>

        <!-- Recent Activity -->
        <div class="recent-activity">
          <h3>Recent Activity</h3>
          <ul class="activity-list">
            {{#each recentActivity}}
            <li class="activity-item">
              <div class="activity-content">
                <span class="activity-type">{{type}}</span>
                <a href="/blog/{{post.slug}}" class="activity-link">
                  {{post.title}}
                </a>
                <time class="activity-time">
                  {{formatDate timestamp}}
                </time>
              </div>
            </li>
            {{/each}}
          </ul>
        </div>

        <!-- Newsletter Signup -->
        <div class="newsletter-signup">
          <h3>Stay Updated</h3>
          <p>Get notified about new posts and updates.</p>
          <form class="newsletter-form">
            <input type="email" placeholder="your@email.com" required class="newsletter-input">
            <button type="submit" class="newsletter-btn">Subscribe</button>
          </form>
        </div>
      </aside>
    </div>
  </main>

  <!-- Footer -->
  <footer class="site-footer">
    <div class="footer-content">
      <div class="footer-info">
        <p>&copy; {{site.year}} {{site.name}}. All rights reserved.</p>
        <p>Built with modern web technologies for optimal performance and accessibility.</p>
      </div>
      <div class="social-links">
        <a href="https://twitter.com/{{site.social.twitter}}" class="social-link twitter" aria-label="Follow us on Twitter">
          üê¶ Twitter
        </a>
        <a href="https://github.com/{{site.social.github}}" class="social-link github" aria-label="View our GitHub repository">
          üêô GitHub
        </a>
        <a href="https://linkedin.com/{{site.social.linkedin}}" class="social-link linkedin" aria-label="Connect with us on LinkedIn">
          üíº LinkedIn
        </a>
      </div>
      <div class="footer-nav">
        <a href="/privacy">Privacy Policy</a>
        <a href="/terms">Terms of Service</a>
        <a href="/contact">Contact</a>
        <a href="/rss.xml">RSS Feed</a>
      </div>
    </div>
  </footer>

  <script>
    // Progressive enhancement for interactivity
    document.addEventListener('DOMContentLoaded', function() {
      // Theme toggle functionality
      const themeToggle = document.querySelector('.theme-toggle');
      if (themeToggle) {
        themeToggle.addEventListener('click', () => {
          const html = document.documentElement;
          const currentTheme = html.getAttribute('data-theme');
          html.setAttribute('data-theme', currentTheme === 'dark' ? 'light' : 'dark');
        });
      }
    });
  </script>
</body>
</html>